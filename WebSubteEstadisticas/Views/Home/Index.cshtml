@model HomeViewModel

@section Scripts
	{
	<script type="text/javascript" src="@Url.Content("/js/Chart.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("/js/Site.js")"></script>

		<script>
			var chart;
			$(function () {				
				chart = NewInstanceChart("chart", @(Html.Raw(Json.Serialize(Model.DatosFuncionamiento.Select(x => x.GetHorasYMinutosNormales).ToArray()))), @(Html.Raw(Json.Serialize(Model.DatosFuncionamiento.Select(x => x.GetHorasYMinutosSuspendido).ToArray()))));			
			});
		</script>
}

<canvas id="chart" width="400" height="400"></canvas>